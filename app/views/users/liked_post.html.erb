<%= render 'users/user' %>

<% if @user == current_user %>
  <table>
    <thead>
      <tr>
        <th>Liked Posts</th>
        <th colspan="3"></th>
      </tr>
    </thead> 
    <tbody>
      <% @user.likes.each do |like| %>
        <tr>
          <td><%= like.post.body %></td>
          <td>
            <% if like.post.liked_by? current_user %>
              <%= link_to 'Unlike', post_likes_path(like.post), method: :delete %>
            <% else %>
              <%= link_to 'Like', post_likes_path(like.post), method: :post %>
            <% end %>
          </td>
          <td><%= "(by #{like.post.user.name})" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
